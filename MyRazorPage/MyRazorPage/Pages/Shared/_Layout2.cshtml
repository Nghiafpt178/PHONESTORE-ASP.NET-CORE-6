
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
</head>
<body>
    <div id="container">
        <div id="header">
            <div id="logo-admin">
                Ecommerce Admin
            </div>
            <div id="banner-admin">
                <ul>
                    <li><a href="~/account/signout">SignOut</a></li>
                </ul>
            </div>
        </div>
        <div id="content">
            <div id="content-left">
                <ul>
                    <a asp-page="/admin/dashboard/index">
                    <li>Dashboard</li></a>
                    <a asp-page="/admin/order/index">
                    <li>Orders</li></a>
                   @* <a asp-page="/admin/product/index">
                    <li>Products SignalR</li></a>*@
                    <a asp-page="/admin/product/manager">
                    <li>Products</li></a>
                    <a asp-page="/admin/customer/index">
                    <li>Customers</li></a>
                </ul>
            </div>
            <div id="content-right">
                @RenderBody()
            </div>
          
        </div>
        <div id="footer-admin">footer</div>
    </div>
</body>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
@if (!Context.Request.Path.Value.ToLower().Contains("addproduct") && !Context.Request.Path.Value.ToLower().Contains("edit"))
{
    <script src="~/js/siteadmin.js"></script>
}

</html>
